# Telegram API credentials
# Get these from https://my.telegram.org/apps
API_ID=your_api_id
API_HASH=your_api_hash

# Telegram session string
# Generate this using generate_session.py or other session generation methods
SESSION_STRING=your_session_string

# Database connection
# PostgreSQL connection URL (Northflank provides this automatically if you use PostgreSQL addon)
DATABASE_URL=postgresql://username:password@host:port/database_name

# Control Bot (Official Bot API Token from BotFather)
CONTROL_BOT_TOKEN=your_bot_token_from_botfather
USERBOT_ADMIN_ID=6602517122

# Production Environment Variables (for Northflank deployment)
# Optional: Logging Configuration
LOG_LEVEL=INFO

# Optional: Environment
ENVIRONMENT=production

# Optional: Error Monitoring (Sentry)
# Get from https://sentry.io
SENTRY_DSN=your_sentry_dsn_here

# Optional: Performance Monitoring
PROMETHEUS_PORT=9090